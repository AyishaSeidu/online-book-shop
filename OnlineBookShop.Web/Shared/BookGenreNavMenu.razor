@inherits BookGenreNavMenuBase

@if(Genres==null && ErrorMessage == null)
{
    <Spinner/>
}
else if(Genres==null & ErrorMessage!=null)
{
    <ErrorMessage Message="@ErrorMessage"/>
}
else
{
            <ul class="oi oi-list-rich">&nbsp; Genres
    @foreach(var genre in Genres)
    {
        var link = $"/Genres/{genre.Id}";

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@link">
                <span></span>&nbsp; @genre.Name 
            </NavLink>
        </div>
         }
           </ul> 
}
